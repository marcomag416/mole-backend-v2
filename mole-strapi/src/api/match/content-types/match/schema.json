{
  "kind": "collectionType",
  "collectionName": "matches",
  "info": {
    "singularName": "match",
    "pluralName": "matches",
    "displayName": "Match",
    "description": ""
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "group_phase": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::group-phase.group-phase",
      "inversedBy": "matches"
    },
    "knock_out_phase": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::knock-out-phase.knock-out-phase",
      "inversedBy": "matches"
    },
    "event_info": {
      "type": "component",
      "repeatable": false,
      "component": "commons.event-info",
      "required": true
    },
    "home_score": {
      "type": "integer",
      "default": 0,
      "required": true,
      "min": 0
    },
    "away_score": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "required": true
    },
    "penalties": {
      "type": "boolean",
      "default": false,
      "required": true
    },
    "home_penalties": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "away_penalties": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "home_score_offset": {
      "type": "integer",
      "default": 0,
      "private": true
    },
    "away_score_offset": {
      "type": "integer",
      "private": true,
      "default": 0
    },
    "score_policy": {
      "type": "enumeration",
      "enum": [
        "events_only",
        "offset_only",
        "events_offset"
      ],
      "default": "events_offset",
      "private": true
    },
    "match_events": {
      "type": "dynamiczone",
      "components": [
        "match-event.goal",
        "match-event.card"
      ]
    },
    "home_team": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team-edition.team-edition",
      "inversedBy": "matches"
    },
    "away_team": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::team-edition.team-edition",
      "inversedBy": "matches"
    },
    "hide_event_minutes": {
      "type": "boolean",
      "default": false
    }
  }
}
